{
  "name": "esperance",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "services:up": "docker compose -f src/app/database/compose.yaml up -d",
    "services:down": "docker compose -f src/app/database/compose.yaml down",
    "services:stop": "docker compose -f src/app/database/compose.yaml stop",
    "prisma:migrate-dev": "npx prisma migrate dev",
    "prisma:deploy": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate",
    "prisma:production": "npm run prisma:deploy && npm run prisma:generate",
    "dev": "npm run services:up && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.3",
    "@heroicons/react": "^2.1.3",
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.13.0",
    "bcryptjs": "^2.4.3",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.51.4",
    "sonner": "^1.4.41",
    "tailwind-variants": "^0.2.1",
    "zod": "^3.23.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/js-cookie": "^3.0.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "postcss": "^8",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "prisma": "^5.13.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
